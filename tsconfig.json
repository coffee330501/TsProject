{
  "version": "1.8.0",
  "compilerOptions": {
    "outDir": "build/compiled",
    "lib": ["es6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true
  },
  "exclude": ["build", "node_modules"],
  "scripts": {
    "start": "ts-node-dev --respawn --transpileOnly src/index.ts"
  }
}
